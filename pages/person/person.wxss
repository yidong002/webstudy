.apt-user .apt-user-profile {
  height: 350rpx;
  width: 100%;
  background-color: #ffffff;
  position: relative;
}
.apt-user .apt-user-profile button {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  color: red;
  border: 1px solid red;
}
.apt-user .apt-user-profile .user-profile-bg image {
  height: 350rpx;
  filter: blur(28rpx);
}
.apt-user .apt-user-profile .image-wrapper {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}
.apt-user .apt-user-profile .image-wrapper image {
  border-radius: 50%;
  height: 170rpx;
  width: 170rpx;
}
.apt-user .apt-user-profile .nickName {
  color: white;
  position: absolute;
  top: 250rpx;
  left: 50%;
  transform: translateX(-50%);
}
.apt-user .apt-user-order {
  height: 150rpx;
  margin: 10rpx;
  background-color: white;
  display: flex;
  align-items: center;
}
.apt-user .apt-user-order .order-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.apt-user .apt-user-order .order-item .iconfont {
  font-size: 50rpx;
}
.apt-user .apt-user-order .order-item .text {
  font-size: 30rpx;
}
.apt-user .apt-user-sysFunc {
  height: 100%;
  background: #ffffff;
}
.apt-user .apt-user-sysFunc .sysFunc-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #ddd;
}
.apt-user .apt-user-sysFunc .sysFunc-item .left {
  display: flex;
  align-items: center;
}
.apt-user .apt-user-sysFunc .sysFunc-item .left .iconfont {
  font-size: 50rpx;
  margin-right: 20rpx;
}
.apt-user .apt-user-sysFunc .sysFunc-item .left .text {
  font-size: 30rpx;
}
